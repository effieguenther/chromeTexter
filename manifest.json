{
"manifest_version": 3,
"name": "Chrome Texter",
"version": "1.0",

"action": {
    "default_icon": {
        "30": "images/icons8-font-size-30.png"
    },
    "default_popup": "popup.html"
},

"description": "Converts text formatting in various ways",

"content_scripts": [
    {
        "js": ["script.js"],
        "html": ["popup.html"],
        "matches": ["<all_urls>"]
    }
]
}